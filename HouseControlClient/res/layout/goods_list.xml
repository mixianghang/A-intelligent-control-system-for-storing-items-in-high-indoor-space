<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goodsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="3" 
    android:descendantFocusability="blocksDescendants">"
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_weight="2"
    android:weightSum="2" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/goodsImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/drink" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/goodsNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" 
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/goodsStoreTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" 
            android:textColor="#000000"/>
        <TextView 
            android:textColor="#000000"
             android:id="@+id/goodsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            />

    </LinearLayout>

	</LinearLayout>
	<LinearLayout 
    android:id="@+id/goodsItemButtons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_weight="1"
    android:weightSum="3" >
    <Button     
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="编辑物品信息"
    android:id="@+id/editGoodsInfoButton"
    android:layout_weight="1"
    android:focusable="false"
    ></Button>
     <Button     
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="取出物品"
    android:id="@+id/getGoodOutButton"
    android:layout_weight="1"
    android:focusable="false"
    ></Button>
      <Button     
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="联网搜素物品信息"
    android:id="@+id/searchGoodsInfoButton"
    android:layout_weight="1"
    android:focusable="false"
    ></Button>
    </LinearLayout>
</LinearLayout>